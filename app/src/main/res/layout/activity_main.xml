<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/City_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City Name"
                android:inputType="text" />

            <Button
                android:id="@+id/Name_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search the city" />

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/City_ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="City ID" />

            <Button
                android:id="@+id/ID_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search the city ID" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/lat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Latitude" />

            <EditText
                android:id="@+id/lon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Longitude" />

            <Button
                android:id="@+id/Lat_Lon_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search by latitude and longitude" />

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <EditText
                android:id="@+id/ZIP_Location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="ZIP Code" />

            <EditText
                android:id="@+id/Country_Code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Country Code (Optional)" />

            <Button
                android:id="@+id/ZIP_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search the ZIP" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/black" />

            <Button
                android:id="@+id/Location_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Current Location" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>